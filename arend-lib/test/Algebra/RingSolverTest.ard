\import Algebra.Group
\import Algebra.Meta
\import Algebra.Monoid
\import Algebra.Pointed
\import Algebra.Ring
\import Algebra.Semiring
\import Meta

\lemma ringTest {R : Ring} (a b c d : R) : a * ((b + c) * d) - (a * b) * d = a * (c * d)
  => equation.ring

\lemma intCoefTest {R : Ring} (b c d : R) : b * 2 * c + b * (3 * c + d + 4) + b * -3 = 5 * b * c + b * (d + 1)
  => equation.ring

\lemma zeroTest {R : Ring} (a b c d : R) : a + a * -1 = 0
  => equation.ring

\lemma ringArgTest1 {R : Ring} (a b : R) (p : negative (a * b) + b * a = 0) : (a + b) * (a - b) = a * a - b * b
  => equation.ring p

\lemma ringArgTest2 {R : Ring} (a : R) (p : 1 + a = 0) : a + 1 = 0
  => equation.ring p

\lemma ringArgTest3 {R : Ring} (a : R) (p : negative (2 * a) = 0) : 0 = a + a
  => equation.ring p

\lemma ringForwardTest {R : Ring} (a b : R) (p : (a + b) * (a - b) = a * a - b * b) : negative (a * b) + b * a = 0
  => equation.ring in p

\lemma ringProofTest1 {R : Ring} (a b : R) (p : a * b = b * a) : (a + b) * (a - b) = a * a - b * b
  => equation.ring { -1 p}

\lemma ringProofTest2 {R : Ring} (a b : R) (p : a * a = b * b) : (a + b) * (a - b) = b * a - a * b
  => equation.ring {p}