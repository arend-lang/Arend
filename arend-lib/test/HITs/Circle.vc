\open Paths

\static \data S1 
	| base
	| loop I 
    \with 
	| loop left => base
	| loop right => base

\static \function
loopP : (base = base) => path (\lam i => loop i)

\static \function
arc (i : I) : (base = loop i) => path (\lam j => loop (squeeze i j))

{-

<= \elim x
       | base => b
       | loop i => (path (\lam i' => coe (\lam i'' => B (loop i'')) b i') *> l) @ i

-}

\static \function
S1-ind (B : S1 -> \Type0) (b : B base) (l : transport B loopP b = b) (x : S1) : (B x) <= \elim x
       | base => b
       | loop i => pathOver l @ i

