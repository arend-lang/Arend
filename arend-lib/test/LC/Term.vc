\open ::Data::Fin
\open ::Data::Unit
\open ::Data::Either
\open ::Data::Nat::Base


\data NTerm
    | NVar Nat
    | NApp NTerm NTerm
    | NLam Nat NTerm


\data FTerm (V : \Type)
    | FVar V
    | FApp (FTerm V) (FTerm V)
    | FLam (FTerm (Either V Unit))


\data ITerm (n : Nat)
    | IVar (Fin n)
    | IApp (ITerm n) (ITerm n)
    | ILam (ITerm (suc n))


