\open ::Data::Fin
\open ::Data::Unit
\open ::Data::Either
\open ::Data::Nat::Base

-- Наконец-то сами определения термов
\data NTerm
    | NVar Nat
    | NApp NTerm NTerm
    | NLam Nat NTerm

-- Возможно что придется определять fmap и bind
-- Потом повозимся с этим вариантом
\data Term' (V : \Set0)
    | Var' V
    | App' (Term' V) (Term' V)
    | Lam' (Term' (Either V Unit))

\data ITerm (n : Nat)
    | IVar (Fin n)
    | IApp (ITerm n) (ITerm n)
    | ILam (ITerm (suc n))
