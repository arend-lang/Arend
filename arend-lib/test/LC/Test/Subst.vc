\open ::LC::Test::Term


\function
rename
    (z x : Nat)
    (rho : Nat -> Nat)
    (d : Dec (z = x)) : Nat <= \elim d
        | inr _ => suc x
        | inl _ => rho x


\function
var-helper
	(n m : Nat)
	(d : Dec (n = m))
	(t1 : Term)
	(t2 : Term) : Term <= \elim d
		| inr pro => t1
        | inl con => t2


\function
lam-helper
    (x : Nat)
    (s : Term)
    (d : Dec (IsFree x s))
    (t1 : Term)
    (t2 : Term) : Term <= \elim d
        | inr pro => t1
        | inl con => t2


\function
subst'
    (t : Term)
    (y : Nat)
    (s : Term)
    (rho : Nat -> Nat) : Term <= \elim t
        | Var x     => var-helper (rho x) y (rho x =? y) s (Var (rho x))
        | App t1 t2 => App (subst' t1 y s rho) (subst' t2 y s rho)
        | Lam x t   => var-helper (rho x) y (rho x =? y) (Lam x t) (lam-helper x s (isFreeDec x s) (Lam (suc x) (subst' t y s (\lam z => rename z x rho (z =? x)))) (Lam x (subst' t y s rho)))


\function
subst
    (t : Term)
    (y : Nat)
    (s : Term) : Term => subst' t y s id
