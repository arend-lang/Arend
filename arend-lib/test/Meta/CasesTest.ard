\import Meta

\lemma test1 (n : Nat) : (\case n \with { | 0 => 1 | suc _ => 1 }) = 1
  => mcases \with {
    | 0 => idp
    | suc _ => idp
  }

\lemma test2 (n m : Nat) : (\case n \with { | 0 => 2 | suc _ => 2 }) = (\case m \with { | 0 => 2 | suc _ => 2 })
  => mcases \with {
    | 0, 0 => idp
    | 0, suc n1 => idp
    | suc n1, 0 => idp
    | suc n1, suc n2 => idp
  }

\lemma testDef (n : Nat) : (\case n \with { | 0 => 3 | 1 => 3 | suc (suc _) => 3 }) = 3
  => mcases idp
