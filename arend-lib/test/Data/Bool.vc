\static \data Bool | true | false

\static \function
True (b : Bool) : \Prop <= \elim b
    | true => Data.Unit.Unit
    | false => Data.Empty.Empty

\static \function
not (b : Bool) : Bool <= \elim b
    | true => false
    | false => true

\static \function
if {A : \Type0} (b : Bool) (then else : A) : A <= \elim b
    | true => then
    | false => else

\static \function
and (x y : Bool) : Bool <= if x y false

\static \function
or  (x y : Bool) : Bool <= if x true y
