\open ::Data::Bool
\open ::Data::Unit
\open ::Data::Empty

\data Either {l : Level} (A B : \Type l)
    | inl A
    | inr B

\function
is-left {l : Level} {L R : \Type l} (e : Either L R) : \Prop <= \elim e
    | inl _ => Unit
    | inr _ => Empty

\function
is-right {l : Level} {L R : \Type l} (e : Either L R) : \Prop <= \elim e
    | inl _ => Empty
    | inr _ => Unit

\function
map-inl {l : Level} {L L' R : \Type l} (f : L -> L') (e : Either L R) : Either L' R <= \elim e
    | inl l => inl (f l)
    | inr r => inr r

\function
map-inr {l : Level} {L R R' : \Type l} (f : R -> R') (e : Either L R) : Either L R' <= \elim e
    | inl l => inl l
    | inr r => inr (f r)

\function
inl' : Either Unit Unit <= inl unit

\function
inr' : Either Unit Unit <= inr unit

\function
if' {l : Level} {A L R : \Type l} (e : Either L R) (then else : A) : A <= \elim e
    | inr _ => then
    | inl _ => else
