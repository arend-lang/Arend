\open Combinators

\static \function
pred (x : Nat) : Nat <= \elim x
    | zero => 0
    | suc x' => x'

\static \function \infixl 6
(+) (x y : Nat) : Nat <= \elim x
    | zero => y
    | suc x' => suc $ x' + y

\static \function \infixl 7
(*) (x y : Nat) : Nat <= \elim x
    | zero => zero
    | suc x' => y + (x' * y)

\static \function \infixl 6
(-) (x y : Nat) : Nat <= \elim y
    | zero => x
    | suc y' => pred $ x - y'

\static \data \infix 4
(=<) (n m : Nat)
  | (=<) zero m => le_z
  | (=<) (suc n) (suc m) => le_ss (n =< m)

\static \function \infix 4
(<) (n m : Nat) : \Type0 => suc n =< m

\static \function \infix 4
(>) (n m : Nat) : \Type0 => m < n
