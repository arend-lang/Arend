\import Data.Empty

\class Preorder (El : \Set) {
  | \infix 4 <= : El -> El -> \Prop
  | reflexive (x : El) : x <= x
  | <=-transitive (x y z : El) : x <= y -> y <= z -> x <= z
}

\class Poset \extends Preorder {
  | antisymmetric (x y : El) : x <= y -> y <= x -> x = y
}

\class StrictPoset (El : \Set) {
  | \infix 4 < : El -> El -> \Prop
  | antireflexive (x : El) : x < x -> Empty
  | <-transitive (x y z : El) : x < y -> y < z -> x < z
}

\func \infix 4 > {P : StrictPoset} {x y : P} => y < x

\func \infix 4 >= {P : Preorder} {x y : P} => y <= x

\class Positive {X : \Set} {Z : AddPointed X} {P : StrictPoset X} (x : X) {p : x > 0}
